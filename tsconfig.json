{
    "compilerOptions": {
       "target": "es2022",
       "module": "commonjs",
       "rootDir": "./src",
       "resolveJsonModule": true, /* in case you are importing JSON files */
       "outDir": "./build",
       "esModuleInterop": true,
       "forceConsistentCasingInFileNames": true,
       "strict": true,
       "noImplicitAny": false,
       "skipLibCheck": true,
       "sourceMap": true,
    }
 }
